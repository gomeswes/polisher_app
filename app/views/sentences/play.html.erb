<script type="text/javascript">
  $(document).ready(function(){
    controller.initControls($('#inpEnglish'), $('#inpPolish'), $('#inpPolishReadonly'), $('#btnCheck'))  
    controller.initSentence('<%= @sentence.english %>', '<%= @sentence.polish %>', '<%= @sentence.id %>')
    controller.initPolisher(polisher)
  });
  var polisher = (function(){
    var publicApi = {}
    publicApi.checkIsCorrect = function(polishOriginal, polishNew){
      return polishOriginal == polishNew
    }

    return publicApi;
  })();

</script>

<div class="col-md-12">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-sm-3">
        <div class="">
          <div class="card-body">
            <a href="/sentences/play/<%=category%>" class="btn btn-success"><%= category %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="form-group col-md-12">
  <input id="inpEnglish" class="form-control-plaintext" readonly value="" />
  <input id="inpPolish"  class="form-control" placeholder=""/>
  <input id="inpPolishReadonly" class="form-control-plaintext" readonly value='' />
  <a href="#" id="btnCheck" class="btn btn-primary pull-right">Check!</a>
</div>