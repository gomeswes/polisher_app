<script type="text/javascript">
  $(document).ready(function(){
    controller.initControls($('#inpEnglish'), $('#inpPolish'), $('#inpPolishReadonly'), $('#btnCheck'), $('#hidePolishSentence'))  
    controller.initSentence('<%= @sentence.english %>', '<%= @sentence.polish %>', '<%= @sentence.id %>')
    controller.setCategoryId('<%= @category_id %>')
    controller.initPolisher(polisher)
    $('.alert').alert()
    $().alert('close')
  });
  var polisher = (function(){
    var publicApi = {}
    publicApi.checkIsCorrect = function(polishOriginal, polishNew){
      return polishOriginal == polishNew
    }

    return publicApi;
  })();

</script>



<div class="form-group form-check">
  <input type="checkbox" class="form-check-input" id="hidePolishSentence">
  <label class="form-check-label" for="exampleCheck1">Hide polish sentence</label>
</div>
<div class="form-group col-md-12">
  <input id="inpEnglish" class="form-control-plaintext" readonly value="" />
  <input id="inpPolish"  class="form-control" placeholder="Write in polish here" autocomplete="off"/>
  <input id="inpPolishReadonly" class="form-control-plaintext" readonly value='' />
  
  <a href="#" id="btnCheck" class="btn btn-primary pull-right mt-3">Check!</a>
</div>

<div class="alert alert-primary mb-3 alert-dismissible" style="display:none" role="alert">
  <span class="alert-link">Well Done!</span> No more items left in his category.
</div>

<div>
  <h4>  Categories </h4>
</div>
<div class="col-md-12">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-sm-3">
        <div class="card text-center bg-success mb-3">
          <div class="card-body">
            <a href="/sentences/play/<%=category%>" class="btn btn-success"><%= category %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
