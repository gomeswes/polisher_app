<%= form_for "sentence", url: "/sentences/create" do |f| %>
  <div class="form-group row">
    <%= f.text_field :english, class: "form-control col-md-12", placeholder: "English Sentence" %>
  </div>
  <div class="form-group row">
    <%= f.text_field :polish, class: "form-control col-md-12", placeholder: "Polish Sentence" %>
  </div>

  <div class="form-group row">
    <%= f.collection_select(:category_id, Category.order(:name).all, :id, :name, {}, {:class=>"form-control"}) %>
  </div>

  <div class="form-group row">
    <%= f.submit "Create", class: "btn btn-primary pull-right" %>
  </div>
<% end %>